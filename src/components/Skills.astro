---
import LayoutIcon from './icons/Layout.astro';
import ServerIcon from './icons/Server.astro';
import DatabaseIcon from './icons/Database.astro';
import WrenchIcon from './icons/Wrench.astro';
import site from '../content/site.json';
---

<section id="skills" class="py-20 relative">
  <div class="container mx-auto px-4">
    <div class="max-w-6xl mx-auto">
      <div class="text-center mb-16">
        <h2 class="text-4xl md:text-5xl font-bold mb-4 glow-text">Habilidades TÃ©cnicas</h2>
        <div class="w-20 h-1 bg-gradient-to-r from-primary to-secondary mx-auto mb-4"></div>
        <p class="text-muted-foreground text-lg">TecnologÃ­as y herramientas que domino</p>
      </div>

      <div class="grid md:grid-cols-2 gap-8">
        {
          site.skillCategories.map((category, categoryIndex) => {
            return (
              <div
                class="glass-card p-8 rounded-2xl hover:glow-border transition-all animate-scale-in"
                style={`animation-delay: ${categoryIndex * 0.1}s`}
              >
                <div class="flex items-center gap-3 mb-6">
                  <div class={`p-3 rounded-xl bg-card ${category.colorClass}`}>
                    {category.icon === 'layout' ? (
                      <LayoutIcon class="w-6 h-6" />
                    ) : category.icon === 'server' ? (
                      <ServerIcon class="w-6 h-6" />
                    ) : category.icon === 'database' ? (
                      <DatabaseIcon class="w-6 h-6" />
                    ) : (
                      <WrenchIcon class="w-6 h-6" />
                    )}
                  </div>
                  <h3 class="text-2xl font-bold">{category.title}</h3>
                </div>

                <div class="space-y-6">
                  {category.skills.map((skill, skillIndex) => (
                    <div>
                      <div class="flex justify-between mb-2">
                        <span class="text-sm font-medium">{skill.name}</span>
                        <span class="text-sm text-muted-foreground">{skill.level}%</span>
                      </div>
                      <div class="h-2 bg-muted rounded-full overflow-hidden">
                        <div
                          class="h-full bg-gradient-to-r from-primary to-secondary rounded-full transition-all duration-1000 ease-out animate-pulse-glow"
                          style={`width: ${skill.level}%; animation-delay: ${(categoryIndex * 4 + skillIndex) * 0.1}s`}
                        />
                      </div>
                    </div>
                  ))}
                </div>
              </div>
            );
          })
        }
      </div>

      <div class="mt-12 text-center">
        <div class="glass-card p-6 rounded-xl inline-block">
          <p class="text-muted-foreground">
            Y siempre aprendiendo nuevas tecnologÃ­as...<span
              class="inline-block ml-2 animate-bounce">ðŸš€</span
            >
          </p>
        </div>
      </div>
    </div>
  </div>
</section>
