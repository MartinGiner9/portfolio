---
import ArrowRight from './icons/ArrowRight.astro';
import DownloadIcon from './icons/Download.astro';
import GithubIcon from './icons/Github.astro';
import LinkedinIcon from './icons/Linkedin.astro';
import MailIcon from './icons/Mail.astro';
---

<section
  id="hero"
  class="min-h-screen flex items-center justify-center relative overflow-x-clip pt-20"
>
  <!-- Animated Background -->
  <div class="absolute inset-0">
    <div
      class="absolute top-1/4 left-1/4 w-96 h-96 rounded-full blur-3xl animate-float"
      style="background: radial-gradient(circle at 40% 40%, hsl(var(--primary) / 0.36), transparent 55%);"
    >
    </div>
    <div
      class="absolute bottom-1/4 right-1/4 w-96 h-96 rounded-full blur-3xl animate-float"
      style="animation-delay: 2s; background: radial-gradient(circle at 60% 60%, hsl(var(--secondary) / 0.32), transparent 55%);"
    >
    </div>
  </div>

  <div class="container mx-auto px-4 relative z-10">
    <div class="max-w-7xl mx-auto">
      <!-- En móvil: columna, en desktop: 2 columnas -->
      <div class="flex flex-col md:grid md:grid-cols-2 gap-8 items-center">
        <!-- TEXTO: primero en móvil y en desktop -->
        <div class="text-center md:text-left animate-fade-in">
          <p class="text-primary text-lg mb-4">Hey, soy Martín Giner — +2 años de experiencia</p>

          <h1 class="text-4xl sm:text-5xl md:text-6xl lg:text-7xl font-bold mb-6 glow-text">
            Desarrollador Web FullStack
          </h1>

          <p class="text-lg md:text-2xl text-muted-foreground mb-8">
            De Murcia, España. Especializado en Angular y Spring Boot.
          </p>

          <div
            class="flex flex-wrap gap-4 justify-center md:justify-start mb-8 animate-scale-in"
            style="animation-delay: 0.2s;"
          >
            <button
              type="button"
              class="inline-flex items-center gap-2 px-6 py-3 bg-primary text-primary-foreground hover:bg-primary/90 glow-border group rounded-md text-lg font-medium"
              onclick="document.querySelector('#projects') && document.querySelector('#projects').scrollIntoView({ behavior: 'smooth' })"
            >
              Ver Proyectos
              <ArrowRight class="ml-2 w-4 h-4" />
            </button>

            <a
              href="/Martin_Giner_Navarro-CV.pdf"
              download
              class="inline-flex items-center gap-2 px-6 py-3 border border-primary text-primary hover:bg-primary hover:text-primary-foreground rounded-md text-lg font-medium"
            >
              <DownloadIcon class="mr-2 w-4 h-4" />
              Descargar CV
            </a>
          </div>

          <div
            class="flex gap-6 justify-center md:justify-start animate-fade-in"
            style="animation-delay: 0.4s;"
          >
            <a
              href="https://github.com/MartinGiner9"
              target="_blank"
              rel="noopener noreferrer"
              class="w-12 h-12 rounded-full glass-card flex items-center justify-center hover:glow-border transition-all hover:scale-110"
            >
              <GithubIcon class="w-5 h-5" />
            </a>
            <a
              href="https://linkedin.com"
              target="_blank"
              rel="noopener noreferrer"
              class="w-12 h-12 rounded-full glass-card flex items-center justify-center hover:glow-border transition-all hover:scale-110"
            >
              <LinkedinIcon class="w-5 h-5" />
            </a>
            <a
              href="mailto:martinginernavarro7@gmail.com"
              class="w-12 h-12 rounded-full glass-card flex items-center justify-center hover:glow-border transition-all hover:scale-110"
            >
              <MailIcon class="w-5 h-5" />
            </a>
          </div>
        </div>

        <!-- IMAGEN: segunda columna en desktop, debajo del texto en móvil -->
        <div
          class="flex justify-center md:justify-end animate-scale-in w-full"
          style="animation-delay: 0.3s;"
        >
          <div class="relative w-full max-w-sm md:max-w-lg">
            <!-- degradado suave detrás de la imagen -->
            <div
              class="absolute bottom-0 left-0 right-0 h-32 md:h-40 pointer-events-none"
              style="background: linear-gradient(to top, hsl(var(--background) / 0.06), hsl(var(--background) / 0));"
            >
            </div>

            <img
              src="/MartinGiner.webp"
              alt="Martín Giner - Full Stack Developer"
              class="relative w-full object-contain z-10"
              style="-webkit-mask-image: linear-gradient(to top, rgba(0,0,0,0) 0%, rgba(0,0,0,1) 40%); mask-image: linear-gradient(to top, rgba(0,0,0,0) 0%, rgba(0,0,0,1) 40%);"
            />

            <div
              class="absolute bottom-0 left-0 right-0 h-1/3 pointer-events-none z-20"
              style="background: linear-gradient(to top, transparent 0%, hsl(var(--primary) / var(--hero-overlay, 0)) 50%, transparent 85%);"
              aria-hidden="true"
            >
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Scroll Indicator -->
  <div class="absolute bottom-20 left-1/2 -translate-x-1/2 animate-bounce">
    <div class="w-6 h-10 rounded-full border-2 border-primary flex items-start justify-center p-2">
      <div class="w-1 h-2 bg-primary rounded-full animate-pulse"></div>
    </div>
  </div>
</section>
