---
import ArrowRight from './icons/ArrowRight.astro';
import DownloadIcon from './icons/Download.astro';
import GithubIcon from './icons/Github.astro';
import LinkedinIcon from './icons/Linkedin.astro';
import MailIcon from './icons/Mail.astro';
import { Image } from 'astro:assets';
import heroImage from '../assets/MartinGiner.webp';
---

<section
  id="hero"
  class="min-h-screen flex items-center justify-center relative overflow-x-clip pt-20"
>
  <!-- Animated Background -->
  <div class="absolute inset-0">
    <div
      class="absolute top-1/4 left-1/4 w-96 h-96 rounded-full blur-3xl animate-float hero-bg-1"
    >
    </div>
    <div
      class="absolute bottom-1/4 right-1/4 w-96 h-96 rounded-full blur-3xl animate-float hero-bg-2"
    >
    </div>
  </div>

  <div class="container mx-auto px-4 relative z-10">
    <div class="max-w-7xl mx-auto">
      <!-- En móvil: columna, en desktop: 2 columnas -->
      <div class="flex flex-col md:grid md:grid-cols-2 gap-8 items-center">
        <!-- TEXTO: primero en móvil y en desktop -->
        <div class="text-center md:text-left animate-fade-in">
          <p class="text-primary text-lg mb-4">Hey, soy Martín Giner — +2 años de experiencia</p>

          <h1 class="text-3xl sm:text-4xl md:text-6xl lg:text-7xl font-bold mb-4 sm:mb-6 glow-text leading-tight">
            Full-Stack Web Developer
          </h1>

          <p class="text-base sm:text-lg md:text-2xl text-muted-foreground/90 md:text-muted-foreground mb-6 max-w-xl mx-auto md:mx-0 font-medium md:font-normal">
            Full-stack Angular + Spring Boot. Enfocado en productos sólidos y escalables.
          </p>

          <div
            class="flex flex-wrap gap-4 justify-center md:justify-start mb-8 animate-scale-in"
            style="animation-delay: 0.2s;"
          >
            <button
              type="button"
              class="inline-flex items-center gap-2 px-6 py-3 bg-primary text-primary-foreground hover:bg-primary/90 glow-border group rounded-md text-lg font-medium transition-all hover:scale-105"
              onclick="document.querySelector('#contact') && document.querySelector('#contact').scrollIntoView({ behavior: 'smooth' })"
              aria-label="Scroll to Contact Section"
            >
              Contáctame
              <ArrowRight class="ml-2 w-5 h-5" />
            </button>

            <a
              href="/Martin_Giner_Navarro-CV.pdf"
              download
              class="inline-flex items-center gap-2 px-4 py-2 text-primary hover:text-primary-foreground hover:bg-primary/10 rounded-md text-base font-medium transition-colors border border-primary/20 hover:border-primary"
              aria-label="Download CV PDF"
            >
              <DownloadIcon class="mr-2 w-4 h-4" />
              Descargar CV
            </a>
          </div>

          <div
            class="flex gap-4 justify-center md:justify-start animate-fade-in"
            style="animation-delay: 0.4s;"
          >
            <a
              href="https://github.com/MartinGiner9"
              target="_blank"
              rel="noopener noreferrer"
              class="w-10 h-10 rounded-full glass-card flex items-center justify-center hover:glow-border transition-all hover:scale-110 text-muted-foreground hover:text-primary"
              aria-label="GitHub Profile"
            >
              <GithubIcon class="w-5 h-5" />
            </a>
            <a
              href="https://linkedin.com"
              target="_blank"
              rel="noopener noreferrer"
              class="w-10 h-10 rounded-full glass-card flex items-center justify-center hover:glow-border transition-all hover:scale-110 text-muted-foreground hover:text-primary"
              aria-label="LinkedIn Profile"
            >
              <LinkedinIcon class="w-5 h-5" />
            </a>
            <a
              href="mailto:martinginernavarro7@gmail.com"
              class="w-10 h-10 rounded-full glass-card flex items-center justify-center hover:glow-border transition-all hover:scale-110 text-muted-foreground hover:text-primary"
              aria-label="Email Contact"
            >
              <MailIcon class="w-5 h-5" />
            </a>
          </div>

          <!-- Mobile Scroll Indicator (Below text, above image) -->
          <div class="md:hidden flex justify-center mt-8 animate-bounce">
            <div class="w-6 h-10 rounded-full border-2 border-primary flex items-start justify-center p-2">
              <div class="w-1 h-2 bg-primary rounded-full animate-pulse"></div>
            </div>
          </div>
        </div>

        <!-- IMAGEN: segunda columna en desktop, debajo del texto en móvil -->
        <div
          class="flex justify-center md:justify-end animate-scale-in w-full"
          style="animation-delay: 0.3s;"
        >
          <div class="relative w-full max-w-sm md:max-w-lg">
            <!-- degradado suave detrás de la imagen -->
            <div
              class="absolute bottom-0 left-0 right-0 h-32 md:h-40 pointer-events-none hero-img-gradient"
            >
            </div>

            <Image
              src={heroImage}
              alt="Martín Giner - Full Stack Developer"
              class="relative w-full object-contain z-10 hero-img-cropped"
              style="-webkit-mask-image: linear-gradient(to top, rgba(0,0,0,0) 0%, rgba(0,0,0,1) 40%); mask-image: linear-gradient(to top, rgba(0,0,0,0) 0%, rgba(0,0,0,1) 40%);"
              loading="eager"
            />

            <div
              class="absolute bottom-0 left-0 right-0 h-1/3 pointer-events-none z-20 hero-overlay"
              aria-hidden="true"
            >
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Desktop Scroll Indicator -->
  <div class="hidden md:block absolute bottom-8 md:bottom-20 left-1/2 -translate-x-1/2 animate-bounce z-20">
    <div class="w-6 h-10 rounded-full border-2 border-primary flex items-start justify-center p-2">
      <div class="w-1 h-2 bg-primary rounded-full animate-pulse"></div>
    </div>
  </div>
</section>
